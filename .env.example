# BOT
BOT_MODE=polling
LOCK_FILE=automation_hub.lock

# TELEGRAM
TELEGRAM_BOT_TOKEN=your-telegram-token # Deprecated in app; prefer TELEGRAM_TOKEN
TELEGRAM_TOKEN=your-telegram-token
TELEGRAM_WEBHOOK_URL=https://your-domain/telegram/webhook

# GOOGLE
DRIVE_FOLDER_ID=
GOOGLE_PROJECT_ID=
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# SLACK
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# NOTION
NOTION_TOKEN=
NOTION_DB_ID=

# N8N
N8N_BASE_URL=
N8N_WEBHOOK_PATH=/webhook-test/xxxxx/webhook

# PERF & LOG
CONCURRENCY=5
TIMEOUT_SEC=30
LOG_LEVEL=INFO
LOG_FILE=automation_hub.log

# LLM PROVIDER
# Choose between: gemini | minimax (anthropic-compatible)
LLM_PROVIDER=gemini

# MiniMax (Anthropic-compatible) - fill if using minimax
MINIMAX_API_TOKEN=
MINIMAX_BASE_URL=https://api.minimax.io/anthropic
MINIMAX_MODEL=claude-3-haiku-20240307

# GEMINI AI - fill if using gemini
GEMINI_API_KEY=your-gemini-api-key
OWNER_ID=your-telegram-user-id

# Transcription
TRANSCRIPTION_PROVIDER=whisper # whisper | auto | (empty)
WHISPER_MODEL=base            # tiny|base|small|medium|large
WHISPER_DEVICE=cpu            # cpu|cuda
WHISPER_COMPUTE_TYPE=int8     # int8|int8_float16|float16|float32
WHISPER_LANGUAGE=ko
